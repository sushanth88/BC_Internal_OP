[Unit]
Description=Biryani City Portal (Gunicorn)
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/opt/biryani-portal
Environment="BC_SECRET=${BC_SECRET}"
Environment="FLASK_RUN_PORT=8000"
ExecStart=/opt/biryani-portal/.venv/bin/gunicorn -c /opt/biryani-portal/gunicorn.conf.py app:app
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
